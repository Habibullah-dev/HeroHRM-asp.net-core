@model EmployeeDependantModel

<div class="card bg-light">
    <h2 class="card-header text-center">Employee Contact Details</h2>
    <div class="card-body">
        <div class="row w-100">
            <div class="col-lg-6 text-capitalize">
                <div class="mb-4">
                    <h5>Name:</h5>
                    <h5 class="text-muted">@Model.Name</h5>
                </div>
                <div class="mb-4">
                    <h5>Relationship:</h5>
                    <h5 class="text-muted">@Model.Relationship</h5>
                </div>
              

            </div>
            <div class="col-lg-6">
                <div class="mb-4">
                    <h5>Date Of Birth:</h5>
                    <h5 class="text-muted">@Model.DateOfBirth</h5>
                </div>



            </div>

        </div>

        <hr />
        <a class="btn btn-outline-primary" asp-controller="Employee" asp-action="EditEmployeeDependant" asp-route-Id="@Model.Id">Edit</a>
        <a class="btn btn-success" asp-controller="Employee" asp-action="CreateEmployeeDependant" asp-route-EmployeeId="@Model.EmployeeId" asp-route-Id="@Model.Id">Add</a>

    </div>
</div>
