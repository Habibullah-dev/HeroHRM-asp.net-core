@model EmployeeSupervisorModel
@inject HeroHRM.Repository.IEmployeeRepository _employees

@{
    var employeeSupervisor = await _employees.FindEmployee(Model.Supervisor);
}


<div class="card bg-light">
    <h2 class="card-header text-center">Membership Details</h2>
    <div class="card-body">
        <div class="row w-100">
            <div class="col-lg-6 text-capitalize">
                <div class="mb-4">
                    <h5>Job Title:</h5>
                    <h5 class="text-muted">@employeeSupervisor.FirstName @employeeSupervisor.LastName</h5>
                </div>
                <div class="mb-4">
                    <h5>Job Category:</h5>
                    <h5 class="text-muted">@Model.ReportingMethod</h5>
                </div>


            </div>
            <div class="col-lg-6">



            </div>

        </div>

        <hr />

        <a class="btn btn-outline-primary" asp-controller="Employee" asp-action="EditEmployeeSupervisor" asp-route-Id="@Model.Id">Edit</a>

    </div>
</div>
