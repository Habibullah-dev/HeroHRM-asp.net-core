@model EmployeeEducationModel

<div class="card bg-light">
    <h2 class="card-header text-center">Employee Contact Details</h2>
    <div class="card-body">
        <div class="row w-100">
            <div class="col-lg-6 text-capitalize">
                <div class="mb-4">
                    <h5>Level:</h5>
                    <h5 class="text-muted">@Model.Level</h5>
                </div>
                <div class="mb-4">
                    <h5>Institute:</h5>
                    <h5 class="text-muted">@Model.Institute</h5>
                </div>
                <div class="mb-4">
                    <h5>Major:</h5>
                    <h5 class="text-muted">@Model.Major</h5>
                </div>
                <div class="mb-4">
                    <h5>Year:</h5>
                    <h5 class="text-muted">@Model.Year</h5>
                </div>
            

            </div>
            <div class="col-lg-6">

                <div class="mb-4">
                    <h5>Gpa/Score:</h5>
                    <h5 class="text-muted">@Model.Gpa</h5>
                </div>
                <div class="mb-4">
                    <h5>Start Date:</h5>
                    <h5 class="text-muted">@Model.StartDate</h5>
                </div>
                <div class="mb-4">
                    <h5>End Date:</h5>
                    <h5 class="text-muted">@Model.EndDate</h5>
                </div>


            </div>

        </div>

        <hr />
        <a class="btn btn-outline-primary" asp-controller="Employee" asp-action="EditEmployeeEducation" asp-route-Id="@Model.Id">Edit</a>

    </div>
</div>
