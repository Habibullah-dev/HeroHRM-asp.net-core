@model EmployeeJobModel

<div class="card bg-light">
    <h2 class="card-header text-center">Job Details</h2>
    <div class="card-body">
        <div class="row w-100">
            <div class="col-lg-6 text-capitalize">
                <div class="mb-4">
                    <h5>Job Title:</h5>
                    <h5 class="text-muted">@Model.JobTitle</h5>
                </div>
                <div class="mb-4">
                    <h5>Job Category:</h5>
                    <h5 class="text-muted">@Model.JobCategory</h5>
                </div>
                <div class="mb-4">
                    <h5>Company Branch:</h5>
                    <h5 class="text-muted">@Model.CompanyBranch</h5>
                </div>
                <div class="mb-4">
                    <h5>Department:</h5>
                    <h5 class="text-muted">@Model.Department</h5>
                </div>

            </div>
            <div class="col-lg-6">

                <div class="mb-4">
                    <h5>Employment Status:</h5>
                    <h5 class="text-muted">@Model.EmploymentStatus</h5>
                </div>
                <div class="mb-4">
                    <h5>Joined Date:</h5>
                    <h5 class="text-muted">@Model.JoinedDate</h5>
                </div>
                <div class="mb-4">
                    <h5>Contract Start:</h5>
                    <h5 class="text-muted">@Model.ContractStart</h5>
                </div>
                <div class="mb-4">
                    <h5>Contract Start:</h5>
                    <h5 class="text-muted">@Model.ContractEnd</h5>
                </div>

            </div>

        </div>

        <hr />

        <a class="btn btn-outline-primary" asp-controller="Employee" asp-action="EditEmployeeJob" asp-route-Id="@Model.Id">Edit</a>

    </div>
</div>
