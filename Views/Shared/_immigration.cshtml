@model EmployeeImmigrationModel

<div class="card bg-light">
    <h2 class="card-header text-center">Immigration Details</h2>
    <div class="card-body">
        <div class="row w-100">
            <div class="col-lg-6 text-capitalize">
                <div class="mb-4">
                    <h5>Document Type:</h5>
                    <h5 class="text-muted">@Model.DocumentType</h5>
                </div>
                <div class="mb-4">
                    <h5>Number:</h5>
                    <h5 class="text-muted">@Model.Number</h5>
                </div>
                <div class="mb-4">
                    <h5>Issued Date:</h5>
                    <h5 class="text-muted">@Model.IssuedDate</h5>
                </div>
                <div class="mb-4">
                    <h5>Expiry Date:</h5>
                    <h5 class="text-muted">@Model.ExpiryDate</h5>
                </div>

            </div>
            <div class="col-lg-6">

                <div class="mb-4">
                    <h5>Eligible Status:</h5>
                    <h5 class="text-muted">@Model.EligibleStatus</h5>
                </div>
                <div class="mb-4">
                    <h5>Eligible Review Date:</h5>
                    <h5 class="text-muted">@Model.EligibleReviewDate</h5>
                </div>
                <div class="mb-4">
                    <h5>Nationality:</h5>
                    <h5 class="text-muted">@Model.Country</h5>
                </div>

            </div>

        </div>

        <hr />

        <a class="btn btn-outline-primary" asp-controller="Employee" asp-action="EditEmployeeImmigration" asp-route-Id="@Model.Id">Edit</a>

    </div>
</div>
