@model EmployeeWorkExperienceModel

<div class="card bg-light">
    <h2 class="card-header text-center">Work Experience Details</h2>
    <div class="card-body">
        <div class="row w-100">
            <div class="col-lg-6 text-capitalize">
                <div class="mb-4">
                    <h5>Job Title:</h5>
                    <h5>class="text-muted">@Model.JobTitle</h5>
                </div>
                <div class="mb-4">
                    <h5>Company Name:</h5>
                    <h5 class="text-muted">@Model.CompanyName</h5>
                </div>
                <div class="mb-4">
                    <h5>From:</h5>
                    <h5 class="text-muted">@Model.From</h5>
                </div>
                <div class="mb-4">
                    <h5>To:</h5>
                    <h5 class="text-muted">@Model.To</h5>
                </div>

            </div>
            <div class="col-lg-6">
                <div class="mb-4">
                    <h5>Comment:</h5>
                    <h5 class="text-muted">@Model.Comment</h5>
                </div>


            </div>

        </div>

        <hr />

        <a class="btn btn-outline-primary" asp-controller="Employee" asp-action="EditEmployeeExperience" asp-route-Id="@Model.Id">Edit</a>

    </div>
</div>
