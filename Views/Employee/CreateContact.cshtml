
@model EmployeeContactModel

@{
    ViewData["Title"] = "Employee Contact Information | HeroHRM human resource manager";

}
<partial name="_adminPartial" />
<div class="container mt-4">
    <div class="card">
        <div class="card-header text-center">
            <h3>Add Contact Information</h3>
        </div>
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show w-100 m-auto  my-1" role="alert">
                <strong>Congratulations</strong> You have added new Employee Contact Information successfully. <br />
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="card-body bg-light p-3">
            <div class="row g-3 align-items-center ">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label asp-for="HomeTelephone" class="form-label"></label>
                                <input type="text" asp-for="HomeTelephone" class="form-control">
                                <span class="text-danger" asp-validation-for="HomeTelephone"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Mobile" class="form-label"></label>
                                <input type="text" asp-for="Mobile" class="form-control">
                                <span class="text-danger" asp-validation-for="Mobile"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="WorkTelephone" class="form-label"></label>
                                <input type="text" asp-for="WorkTelephone" class="form-control">
                                <span class="text-danger" asp-validation-for="WorkTelephone"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="WorkEmail" class="form-label"></label>
                                <input asp-for="WorkEmail" class="form-control">
                                <span class="text-danger" asp-validation-for="WorkEmail"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Phone" class="form-label"></label>
                                <input asp-for="Phone" class="form-control">
                                <span class="text-danger" asp-validation-for="Phone"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ZipCode" class="form-label"></label>
                                <input asp-for="ZipCode" class="form-control">
                                <span class="text-danger" asp-validation-for="ZipCode"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Country" class="form-label"></label>
                                <input asp-for="Country" class="form-control">
                                <span class="text-danger" asp-validation-for="Country"></span>
                            </div>


                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label asp-for="OtherEmail" class="form-label"></label>
                                <input type="text" asp-for="OtherEmail" class="form-control">
                                <span class="text-danger" asp-validation-for="OtherEmail"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Fax" class="form-label"></label>
                                <input type="text" asp-for="Fax" class="form-control">
                                <span class="text-danger" asp-validation-for="Fax"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Address" class="form-label"></label>
                                <input asp-for="Address" class="form-control">
                                <span class="text-danger" asp-validation-for="Address"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="City" class="form-label"></label>
                                <input asp-for="City" class="form-control">
                                <span class="text-danger" asp-validation-for="City"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="State" class="form-label"></label>
                                <input asp-for="State" class="form-control">
                                <span class="text-danger" asp-validation-for="State"></span>
                            </div>
                       
                            

                        </div>

                    </div>

                    <hr />
                    <button type="submit" class="btn btn-success btn-ld">Save</button>
                    <a class="btn btn-outline-danger ms-3" asp-controller="Employee" asp-action="index">Cancel</a>

                </form>

            </div>

        </div>
    </div>

</div>
