
@model EmployeeSalaryModel

@{
    ViewData["Title"] = "Employee Salary | HeroHRM human resource manager";

}
<partial name="_employeePartial" />
<div class="container mt-4">
    <div class="card">
        <div class="card-header text-center">
            <h3>Add Employee Salary</h3>
        </div>
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show w-100 m-auto  my-1" role="alert">
                <strong>Congratulations</strong> You have added new Employee Salary successfully. <br />
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="card-body bg-light p-3">
            <div class="row g-3 align-items-center ">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label asp-for="PayGradeId" class="form-label"></label>
                                <select asp-for="PayGradeId" class="form-control" asp-items="ViewBag.PayGrade">
                                    <option value="">Please Choose Pay Grade</option>
                                </select>
                                <span class="text-danger" asp-validation-for="PayGradeId"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="PayFrequency" class="form-label"></label>
                                <select asp-for="PayFrequency" class="form-control" asp-items="ViewBag.PayFrequency">
                                    <option value="">Please Choose Pay Frequency</option>
                                </select>
                                <span class="text-danger" asp-validation-for="PayFrequency"></span>
                            </div>
                      


                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label asp-for="CuurencyId" class="form-label"></label>
                                <select asp-for="CuurencyId" class="form-control" asp-items="ViewBag.Currency">
                                    <option value="">Please Choose Currency</option>
                                </select>
                                <span class="text-danger" asp-validation-for="CuurencyId"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Amount" class="form-label"></label>
                                <input asp-for="Amount" class="form-control">
                                <span class="text-danger" asp-validation-for="Amount"></span>
                            </div>

                        </div>

                    </div>

                    <hr />
                    <button type="submit" class="btn btn-success btn-ld">Save</button>
                    <a class="btn btn-outline-danger ms-3" asp-controller="Employee" asp-action="index">Cancel</a>

                </form>

            </div>

        </div>
    </div>

</div>
