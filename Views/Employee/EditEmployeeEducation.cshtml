
@model EmployeeEducationModel

@{
    ViewData["Title"] = "Employee Education Information | HeroHRM human resource manager";
    var Data = ViewBag.Data;
}
<partial name="_adminPartial" />
<div class="container mt-4">
    <div class="card">
        <div class="card-header text-center">
            <h3>Edit Employee Education Information</h3>
        </div>
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show w-100 m-auto  my-1" role="alert">
                <strong>Congratulations</strong> You have Updated Employee Contact Information successfully. <br />
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="card-body bg-light p-3">
            <div class="row g-3 align-items-center ">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label asp-for="Level" class="form-label"></label>
                                <select asp-for="Level" class="form-control" asp-items="ViewBag.Level">
                                    <option value="">Please Choose Education Level</option>
                                </select>
                                <span class="text-danger" asp-validation-for="Level"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Major" class="form-label"></label>
                                <input type="text" value="@Data.Major" asp-for="Major" class="form-control">
                                <span class="text-danger" asp-validation-for="Major"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Institute" class="form-label"></label>
                                <input type="text" value="@Data.Institute" asp-for="Institute" class="form-control">
                                <span class="text-danger" asp-validation-for="Institute"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Gpa" class="form-label"></label>
                                <input asp-for="Gpa" value="@Data.Gpa" class="form-control">
                                <span class="text-danger" asp-validation-for="Gpa"></span>
                            </div>




                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label asp-for="Year" class="form-label"></label>
                                <input type="text" value="@Data.Year" asp-for="Year" class="form-control">
                                <span class="text-danger" asp-validation-for="Year"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="StartDate" class="form-label"></label>
                                <input value="@Data.StartDate" asp-for="StartDate" class="form-control">
                                <span class="text-danger" asp-validation-for="StartDate"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="EndDate" class="form-label"></label>
                                <input asp-for="EndDate" value="@Data.EndDate" class="form-control">
                                <span class="text-danger" asp-validation-for="EndDate"></span>
                            </div>
                            <div class="mb-3">

                                <label asp-for="Comment" class="form-label"></label>
                                <textarea asp-for="Comment" class="form-control"> </textarea>
                                <span class="text-danger" asp-validation-for="Comment"></span>
                            </div>
                        </div>

                    </div>

                    <hr />
                    <button type="submit" class="btn btn-success btn-ld">Save</button>
                    <a class="btn btn-outline-danger ms-3" asp-controller="Employee" asp-action="index">Cancel</a>

                </form>

            </div>

        </div>
    </div>

</div>
