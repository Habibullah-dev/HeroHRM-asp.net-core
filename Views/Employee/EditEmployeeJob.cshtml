
@model EmployeeJobModel

@{
    ViewData["Title"] = "Employee Job Information | HeroHRM human resource manager";

}
<partial name="_employeePartial" />
<div class="container mt-4">
    <div class="card">
        <div class="card-header text-center">
            <h3>Update Employee Job</h3>
        </div>
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show w-100 m-auto  my-1" role="alert">
                <strong>Congratulations</strong> You have updated Employee Job successfully. <br />
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="card-body bg-light p-3">
            <div class="row g-3 align-items-center ">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label asp-for="JobTitleId" class="form-label"></label>
                                <select asp-for="JobTitleId" class="form-control" asp-items="ViewBag.JobTitle">
                                    <option value="">Please Choose Job Title</option>
                                </select>
                                <span class="text-danger" asp-validation-for="JobTitleId"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="JobCategoryId" class="form-label"></label>
                                <select asp-for="JobCategoryId" class="form-control" asp-items="ViewBag.JobCategory">
                                    <option value="">Please Choose Job Category Country</option>
                                </select>
                                <span class="text-danger" asp-validation-for="JobCategoryId"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="EmploymentStatusId" class="form-label"></label>
                                <select asp-for="EmploymentStatusId" class="form-control" asp-items="ViewBag.EmploymentStatus">
                                    <option value="">Please Choose Employeement Status</option>
                                </select>
                                <span class="text-danger" asp-validation-for="EmploymentStatusId"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="JoinedDate" class="form-label"></label>
                                <input asp-for="JoinedDate" class="form-control">
                                <span class="text-danger" asp-validation-for="JoinedDate"></span>
                            </div>


                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label asp-for="CompanyBranchId" class="form-label"></label>
                                <select asp-for="CompanyBranchId" class="form-control" asp-items="ViewBag.CompanyBranch">
                                    <option value="">Please Choose Company Branch</option>
                                </select>
                                <span class="text-danger" asp-validation-for="CompanyBranchId"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="DepartmentId" class="form-label"></label>
                                <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Department">
                                    <option value="">Please Choose Your Country</option>
                                </select>
                                <span class="text-danger" asp-validation-for="DepartmentId"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ContractStart" class="form-label"></label>
                                <input asp-for="ContractStart" class="form-control">
                                <span class="text-danger" asp-validation-for="ContractStart"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ContractEnd" class="form-label"></label>
                                <input asp-for="ContractEnd" class="form-control">
                                <span class="text-danger" asp-validation-for="ContractEnd"></span>
                            </div>

                        </div>

                    </div>

                    <hr />
                    <button type="submit" class="btn btn-success btn-ld">Save</button>
                    <a class="btn btn-outline-danger ms-3" asp-controller="Employee" asp-action="index">Cancel</a>

                </form>

            </div>

        </div>
    </div>

</div>
