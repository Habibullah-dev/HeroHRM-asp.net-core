
@model EmployeeEmergencyModel

@{
    ViewData["Title"] = "Employee Emergency Contact | HeroHRM human resource manager";

}
<partial name="_adminPartial" />
<div class="container mt-4">
    <div class="card">
        <div class="card-header text-center">
            <h3>Add Emergency Contact</h3>
        </div>
        @if (ViewBag.IsSuccess == true)
        {
    <div class="alert alert-success alert-dismissible fade show w-100 m-auto  my-1" role="alert">
        <strong>Congratulations</strong> You have added new Employee Emergency Contact successfully. <br />
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
        }
        <div class="card-body bg-light p-3">
            <div class="row g-3 align-items-center ">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6">
                            <input hidden asp-for="EmployeeId" value="@ViewBag.EmployeeId" />
                            <div class="mb-3">
                                <label asp-for="HomeTelephone" class="form-label"></label>
                                <input asp-for="HomeTelephone" class="form-control">
                                <span class="text-danger" asp-validation-for="HomeTelephone"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Mobile" class="form-label"></label>
                                <input asp-for="Mobile" class="form-control">
                                <span class="text-danger" asp-validation-for="Mobile"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="WorkTelephone" class="form-label"></label>
                                <input asp-for="WorkTelephone" class="form-control">
                                <span class="text-danger" asp-validation-for="WorkTelephone"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Relationship" class="form-label"></label>
                                <input asp-for="Relationship" class="form-control">
                                <span class="text-danger" asp-validation-for="Relationship"></span>
                            </div>

                        </div>
                        <div class="col-lg-6">
              

                        </div>

                    </div>

                    <hr />
                    <button type="submit" class="btn btn-success btn-ld">Save</button>
                    <a class="btn btn-outline-danger ms-3" asp-controller="Employee" asp-action="index">Cancel</a>

                </form>

            </div>

        </div>
    </div>

</div>
