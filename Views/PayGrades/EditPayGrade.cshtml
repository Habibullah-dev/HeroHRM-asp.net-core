
@model PayGradesModel
@{
    ViewData["Title"] = "Edit Pay Grades | HeroHRM human resource manager";

    var Data = ViewBag.Data;
}
<partial name="_adminPartial" />
<div class="container mt-4">
    <div class="card">
        <div class="card-header text-center">
            <h3>Edit Employment Status</h3>
        </div>
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show w-100 m-auto  my-1" role="alert">
                <strong>Congratulations</strong> You have Updated Pay Grade successfully. <br />
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="card-body bg-light p-3">
            <div class="row g-3 align-items-center ">
                <form method="post">
                    <input type="hidden" value="@Data.Id" />
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Job Title</label>
                        <input type="text" asp-for="Name" class="form-control" value="@Data.Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-5">
                        <label asp-for="Currency" class="form-label">Currency</label>
                        <input class="form-control" asp-for="Currency" value="@Data.Currency">
                        <span class="text-danger" asp-validation-for="Currency"></span>
                    </div>
                    <div class="mb-5">
                        <label asp-for="MinimumSalary" class="form-label">Minimum Salary*</label>
                        <input class="form-control" asp-for="MinimumSalary" value="@Data.MinimumSalary">
                        <span class="text-danger" asp-validation-for="MinimumSalary"></span>
                    </div>
                    <div class="mb-5">
                        <label asp-for="MaximumSalary" class="form-label">Maximum Salary*</label>
                        <input class="form-control" asp-for="MaximumSalary" value="@Data.MaximumSalary">
                        <span class="text-danger" asp-validation-for="MaximumSalary"></span>
                    </div>
                    <hr />
                    <button type="submit" class="btn btn-success btn-ld">Save</button>
                    <a class="btn btn-outline-danger ms-3" asp-controller="paygrades" asp-action="index">Cancel</a>

                </form>

            </div>

        </div>
    </div>

</div>
