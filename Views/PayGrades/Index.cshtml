@model List<PayGradesModel>
@{
    ViewData["Title"] = "Job Titles | HeroHRM human resource manager";
}

<partial name="_adminPartial" />
<section class="container mt-3">
    <div class="card">
        <div class="card-header text-center">
            <h3>Pay Grades</h3>
        </div>
        <div class="card-body">
            <a class="btn btn-success" asp-controller="paygrades" asp-action="CreatePayGrade">
                Add Pay-Grade
            </a>
        </div>
    </div>
    <div>
        @if (Model.Count > 0)
        {

            <table class="table table-striped table-hover border">
                <thead class="table-info">
                    <tr>
                        <th>
                            <label>Name</label>
                        </th>
                        <th>
                            <label>Currency</label>
                        </th>
                        <th>
                            <label>Minimum Salary</label>
                        </th>
                        <th>
                            <label>Maximum Salary</label>
                        </th>
                        <th>
                            <label>Action</label>
                        </th>
                    </tr>

                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Currency)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.MinimumSalary)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.MaximumSalary)
                        </td>
                        <td>
                            <a class="btn btn-outline-info" asp-controller="paygrades" asp-action="editPayGrade" asp-route-Id="@item.Id">Edit</a>

                            <a class="btn btn-outline-danger" asp-controller="paygrades" asp-action="deletePayGrade" asp-route-Id="@item.Id">Delete</a>

                        </td>
                    </tr>
                }

            </table>

        }
        else
        {
            <h3>No Information Found</h3>
        }


    </div>
</section>