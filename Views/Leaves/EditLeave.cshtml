
@model LeaveModel

@{
    ViewData["Title"] = "Leave | HeroHRM human resource manager";
}
<partial name="_adminPartial" />
<div class="container mt-4">
    <div class="card">
        <div class="card-header text-center">
            <h3>Update Leavee</h3>
        </div>
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show w-100 m-auto  my-1" role="alert">
                <strong>Congratulations</strong> You have updated Leave successfully. <br />
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="card-body bg-light p-3">
            <div class="row g-3 align-items-center ">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="EmployeeId" class="form-label"></label>
                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employee">
                            <option value="">Please Choose Employee</option>
                        </select>
                        <span class="text-danger" asp-validation-for="EmployeeId"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LeaveType" class="form-label"></label>
                        <select asp-for="LeaveType" class="form-control" asp-items="ViewBag.LeaveType">
                            <option value="">Please Choose Leave Type</option>
                        </select>
                        <span class="text-danger" asp-validation-for="LeaveType"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LeaveStatus" class="form-label"></label>
                        <select asp-for="LeaveStatus" class="form-control" asp-items="ViewBag.LeaveStatus">
                            <option value="">Please Choose Leave Status</option>
                        </select>
                        <span class="text-danger" asp-validation-for="LeaveStatus"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NumberOfDays" class="form-label"></label>
                        <input asp-for="NumberOfDays" class="form-control">
                        <span class="text-danger" asp-validation-for="NumberOfDays"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Comments" class="form-label"></label>
                        <input asp-for="Comments" class="form-control">
                        <span class="text-danger" asp-validation-for="Comments"></span>
                    </div>
                    <hr />
                    <button type="submit" class="btn btn-success btn-ld">Save</button>
                    <a class="btn btn-outline-danger ms-3" asp-controller="Leaves" asp-action="index">Cancel</a>

                </form>

            </div>

        </div>
    </div>

</div>
