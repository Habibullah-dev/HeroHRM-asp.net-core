@model List<CompanyInfoModel>
@{
    ViewData["Title"] = "Company Info | HeroHRM human resource manager";
}

<partial name="_adminPartial" />
<section class="container mt-3">
    <div class="card">
        <div class="card-header text-center">
            <h3>Company Info</h3>
        </div>
        <div class="card-body">
            <a class="btn btn-success" asp-controller="CompanyInfo" asp-action="CreateCompanyInfo">
                Add Company Info
            </a>
        </div>
    </div>
    <div>
        @if (Model.Count > 0)
        {

            <table class="table table-striped table-hover border">
                <thead class="table-info">
                    <tr>
                        <th>
                            <label>Name</label>
                        </th>
                        <th>
                            <label>Tax Id</label>
                        </th>
                        <th>
                            <label>Email</label>
                        </th>
                        <th>
                            <label>Registration Number</label>
                        </th>
                        <th>
                            <label>City</label>
                        </th>
                        <th>
                            <label>Country</label>
                        </th>
                        <th>
                            <label>Address</label>
                        </th>

                        <th>
                            <label>Action</label>
                        </th>
                    </tr>

                </thead>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.TaxId)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(m => item.RegistrationNumber)
                </td>
                <td>
                    @Html.DisplayFor(m => item.City)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Address)
                </td>


                <td>
                    <a class="btn btn-outline-info" asp-controller="CompanyInfo" asp-action="EditCompanyInfo" asp-route-Id="@item.Id">Edit</a>

                    <a class="btn btn-outline-danger" asp-controller="CompanyInfo" asp-action="DeleteCompanyInfo" asp-route-Id="@item.Id">Delete</a>

                </td>
            </tr>
                }

            </table>

        }
        else
        {
            <h3>No Information Found</h3>
        }


    </div>
</section>