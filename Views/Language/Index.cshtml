@model List<LanguageModel>
@{
    ViewData["Title"] = "Language | HeroHRM human resource manager";
}

<partial name="_adminPartial" />
<section class="container mt-3">
    <div class="card">
        <div class="card-header text-center">
            <h3>Language</h3>
        </div>
        <div class="card-body">
            <a class="btn btn-success" asp-controller="Language" asp-action="CreateLanguage">
                Add Language
            </a>
        </div>
    </div>
    <div>
        @if (Model.Count > 0)
        {

            <table class="table table-striped table-hover border">
                <thead class="table-info">
                    <tr>
                        <th>
                            <label>Name</label>
                        </th>
                        <th>
                            <label>Created Date</label>
                        </th>
                        <th>
                            <label>Updated Date</label>
                        </th>
                        <th>
                            <label>Action</label>
                        </th>
                    </tr>

                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.UpdatedDate)
                        </td>

                        <td>
                            <a class="btn btn-outline-info" asp-controller="Language" asp-action="EditLanguage" asp-route-Id="@item.Id">Edit</a>

                            <a class="btn btn-outline-danger" asp-controller="Language" asp-action="DeleteLanguage" asp-route-Id="@item.Id">Delete</a>

                        </td>
                    </tr>
                }

            </table>

        }
        else
        {
            <h3>No Information Found</h3>
        }


    </div>
</section>