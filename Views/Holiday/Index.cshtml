@model List<HolidayModel>
@{
    ViewData["Title"] = "Holiday | HeroHRM human resource manager";
}

<partial name="_adminPartial" />
<section class="container mt-3">
    <div class="card">
        <div class="card-header text-center">
            <h3>Holiday</h3>
        </div>
        <div class="card-body">
            <a class="btn btn-success" asp-controller="Holiday" asp-action="CreateHoliday">
                Add Holiday
            </a>
        </div>
    </div>
    <div>
        @if (Model.Count > 0)
        {

            <table class="table table-striped table-hover border">
                <thead class="table-info">
                    <tr>

                        <th>
                            <label>Holiday Type</label>
                        </th>
                        <th>
                            <label>Holiday Status</label>
                        </th>
                        <th>
                            <label>Number Of  Days</label>
                        </th>
                        <th>
                            <label>Start Date</label>
                        </th>
                        <th>
                            <label>End Date</label>
                        </th>
                        <th>
                            <label>Action</label>
                        </th>
                    </tr>

                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.HolidayType)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.HolidayStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.NumberOfDays)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.EndDate)
                        </td>

                        <td>
                            <a class="btn btn-outline-info" asp-controller="Leaves" asp-action="EditLeave" asp-route-Id="@item.Id">Edit</a>

                            <a class="btn btn-outline-danger" asp-controller="Leaves" asp-action="DeleteLeave" asp-route-Id="@item.Id">Delete</a>

                        </td>
                    </tr>
                }

            </table>

        }
        else
        {
            <h3>No Information Found</h3>
        }


    </div>
</section>