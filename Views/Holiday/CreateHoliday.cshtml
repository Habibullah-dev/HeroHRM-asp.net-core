
@model HolidayModel

@{
    ViewData["Title"] = "Holiday | HeroHRM human resource manager";
}
<partial name="_adminPartial" />
<div class="container mt-4">
    <div class="card">
        <div class="card-header text-center">
            <h3>Add Holiday</h3>
        </div>
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show w-100 m-auto  my-1" role="alert">
                <strong>Congratulations</strong> You have added new Holiday successfully. <br />
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="card-body bg-light p-3">
            <div class="row g-3 align-items-center ">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="HolidayType" class="form-label"></label>
                        <select asp-for="HolidayType" class="form-control" asp-items="ViewBag.HolidayType">
                            <option value="">Please Choose Holiday Type</option>
                        </select>
                        <span class="text-danger" asp-validation-for="HolidayType"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="HolidayStatus" class="form-label"></label>
                        <select asp-for="HolidayStatus" class="form-control" asp-items="ViewBag.HolidayStatus">
                            <option value="">Please Choose Holiday Status</option>
                        </select>
                        <span class="text-danger" asp-validation-for="HolidayStatus"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NumberOfDays" class="form-label"></label>
                        <input asp-for="NumberOfDays" class="form-control">
                        <span class="text-danger" asp-validation-for="NumberOfDays"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" class="form-control">
                        <span class="text-danger" asp-validation-for="StartDate"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" class="form-control">
                        <span class="text-danger" asp-validation-for="EndDate"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Comments" class="form-label"></label>
                        <input asp-for="Comments" class="form-control">
                        <span class="text-danger" asp-validation-for="Comments"></span>
                    </div>
                    <hr />
                    <button type="submit" class="btn btn-success btn-ld">Save</button>
                    <a class="btn btn-outline-danger ms-3" asp-controller="Holiday" asp-action="index">Cancel</a>

                </form>

            </div>

        </div>
    </div>

</div>
