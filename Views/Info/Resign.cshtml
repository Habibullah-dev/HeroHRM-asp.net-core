
@model ResignModel

@{
    ViewData["Title"] = "Leave | HeroHRM human resource manager";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header text-center">
            <h3>Resignation</h3>
        </div>
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show w-100 m-auto  my-1" role="alert">
                <strong>Congratulations</strong> You have sub,itted a resignation letter successfully. <br />
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="card-body bg-light p-3">
            <div class="row g-3 align-items-center ">
                <form method="post" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label asp-for="ResignationFile" class="form-label"></label>
                        <input asp-for="ResignationFile" class="form-control">
                        <span class="text-danger" asp-validation-for="ResignationFile"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Reason" class="form-label"></label>
                        <textarea asp-for="Reason" class="form-control"> </textarea>
                        <span class="text-danger" asp-validation-for="Reason"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Comments" class="form-label"></label>
                        <textarea asp-for="Comments" class="form-control"> </textarea>
                        <span class="text-danger" asp-validation-for="Comments"></span>
                    </div>
                    <hr />
                    <button type="submit" class="btn btn-success btn-ld">Save</button>
                    <a class="btn btn-outline-danger ms-3" asp-controller="Info" asp-action="index">Cancel</a>

                </form>

            </div>

        </div>
    </div>

</div>
